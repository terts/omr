<%= form_tag( { :action => :wine_form, }, { :method => :post }) %>
  <%= text_field :wine, :name, "size" => 20 %>
  <%= text_field :grape, :names, "size" => 20 %>
  <%= select_tag(:like, options_for_select(['Yes', 1], ['No', 2], ['Need to try', 3])) %>
  <%= text_field :winery, :name, "size" => 20 %>
  <%= text_field :winery, :location, "size" => 20 %>
  <%= text_field :vintage, :year, "size" => 20 %>
  <%= text_field :food, :pairings, "size" => 20 %>
  <%= text_field :where, :found, "size" => 20 %>
  <%= text_field :cost, :amt, "size" => 20 %>
  <%= select_tag(:inStock, options_for_select(['Yes', 1], ['No', 2])) %>
<%= end %>
