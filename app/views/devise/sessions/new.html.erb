<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal') do |f| %>
  <div class="control-group">
  	<%= f.label :email %>
  	<div class="controls">
  		<%= f.email_field :email, :class => 'control-label' %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :password %>
  	<div class="controls">
  		<%= f.password_field :password, :class => 'control-label' %>
  	</div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'control-label' %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
